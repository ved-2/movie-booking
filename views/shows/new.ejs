<%- include('../layouts/boilerplate') %>

<div class="container">
    <h1>Add New Show</h1>
    <form action="/shows" method="POST">
        <div class="mb-3">
            <label for="movie" class="form-label">Movie</label>
            <select class="form-control" id="movie" name="movie" required>
                <% movies.forEach(movie => { %>
                    <option value="<%= movie._id %>"><%= movie.title %></option>
                <% }) %>
            </select>
        </div>
        <div class="mb-3">
            <label for="theater" class="form-label">Theater</label>
            <select class="form-control" id="theater" name="theater" required>
                <% theaters.forEach(theater => { %>
                    <option value="<%= theater._id %>"><%= theater.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="mb-3">
            <label for="showTime" class="form-label">Show Time</label>
            <input type="datetime-local" class="form-control" id="showTime" name="showTime" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Show</button>
    </form>
</div> 