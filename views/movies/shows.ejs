<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="<%= movie.posterUrl %>" class="card-img-top" alt="<%= movie.title %>">
                <div class="card-body">
                    <h4 class="card-title"><%= movie.title %></h4>
                    <p class="card-text text-muted">
                        <%= movie.genre.join(', ') %> | <%= movie.duration %> mins
                    </p>
                    <p class="card-text"><%= movie.description %></p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h2>Available Shows</h2>
            
            <% if (shows.length === 0) { %>
                <div class="alert alert-info">
                    No shows available for this movie at the moment.
                </div>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <% shows.forEach(show => { %>
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title"><%= show.theater.name %></h5>
                                    <p class="card-text">
                                        <strong>Screen:</strong> <%= show.screen %><br>
                                        <strong>Time:</strong> <%= show.showTime.toLocaleString() %><br>
                                        <strong>Prices:</strong><br>
                                        Standard: ₹<%= show.price.standard %><br>
                                        Premium: ₹<%= show.price.premium %><br>
                                        VIP: ₹<%= show.price.vip %>
                                    </p>
                                    <a href="/shows/<%= show._id %>/book" class="btn btn-primary">Book Tickets</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <div class="mt-4">
                <a href="/movies" class="btn btn-secondary">← Back to Movies</a>
            </div>
        </div>
    </div>
</div>

<style>
.card-img-top {
    height: 400px;
    object-fit: cover;
}
</style> 